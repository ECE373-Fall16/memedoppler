<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/colorBackground"
    >

    <ImageView
        android:id="@+id/meme_doppler_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_gravity="top"
        android:src="@drawable/memedoppler" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:orientation="horizontal"
    >
        <Button
            android:id="@+id/NotDank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="NotDank"
            />
        <Button
            android:id="@+id/main_Meme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/snowmemexxxhdpi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/snowmemexxxhdpi"
            />

        <Button
            android:id="@+id/Dank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick=""
            />
    </LinearLayout>

    <TextView
        android:id="@+id/current_weather_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="current date and time"
        android:textAlignment="center"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        />

    <Button
        android:id="@+id/location_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_centerHorizontal="true"
        android:text="@string/button_location"
        android:onClick="LocationButton"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal">
        <Button
            android:id="@+id/forecastOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/ldpiforecast1"
            />
        <Button
            android:id="@+id/forecastTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/ldpiforecast2"
            />
        <Button
            android:id="@+id/forecastThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/ldpiforecast3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forecastOneText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="1hr"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/forecastTwoText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="2hr"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/forecastThreeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="3hr"
            android:textColor="#000000"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal">
        <Button
            android:id="@+id/forecastFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/ldpiforecast4"
            />
        <Button
            android:id="@+id/forecastFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/ldpiforecast5"
            />
        <Button
            android:id="@+id/forecastSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/ldpiforecast6"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forecastFourText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="4hr"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/forecastFiveText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="5hr"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/forecastSixText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="6hr"
            android:textColor="#000000"
            android:textAlignment="center"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:background="@color/colorPrimaryDark"
        android:columnCount="4"
        android:rowCount="4"
        android:id="@+id/gridLayout">
    </GridLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_not_dank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="45"
    android:orientation="vertical"
    tools:context="com.example.chad.memedoppler.NotDank"
    android:background="#000000"
    >
    <TextView
        android:id="@+id/ReplacementMemes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Replacement Memes"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="16pt"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/forecastOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@mipmap/e0"
            android:onClick="MainActivity"
            />
        <Button
            android:id="@+id/forecastTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@mipmap/c0"
            android:onClick="MainActivity"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/forecastThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@mipmap/h0"
            android:onClick="MainActivity"
            />
        <Button
            android:id="@+id/forecastFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@mipmap/t0"
            android:onClick="MainActivity"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/forecastFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@mipmap/r0"
            android:onClick="MainActivity"
            />
        <Button
            android:id="@+id/forecastSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@mipmap/r3"
            android:onClick="MainActivity"
            />
    </LinearLayout>

    <Button
        android:id="@+id/NothingDank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Nothing Dank"
        android:textSize="10pt"
        android:background="@color/colorBackground"
        android:onClick="MainActivity"
        />

</LinearLayout>

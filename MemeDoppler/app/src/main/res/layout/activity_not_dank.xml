<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_not_dank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chad.memedoppler.NotDank"
    android:background="#000000"
    >
    <TextView
        android:id="@+id/ReplacementMemes"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Replacement Memes"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="16pt"
        />
    <Button
        android:id="@+id/forecastOne"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@id/ReplacementMemes"
        android:layout_marginTop="50px"
        android:background="@drawable/ldpiforecast1"
        android:onClick="MainActivity"
        />
    <Button
        android:id="@+id/forecastTwo"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@id/ReplacementMemes"
        android:layout_toRightOf="@id/forecastOne"
        android:layout_marginTop="50px"
        android:background="@drawable/ldpiforecast2"
        android:onClick="MainActivity"
        />
    <Button
        android:id="@+id/forecastThree"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@id/forecastOne"
        android:layout_marginTop="50px"
        android:background="@drawable/ldpiforecast3"
        android:onClick="MainActivity"
        />
    <Button
        android:id="@+id/forecastFour"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@+id/forecastOne"
        android:layout_marginTop="50px"
        android:layout_toRightOf="@id/forecastThree"
        android:background="@drawable/ldpiforecast4"
        android:onClick="MainActivity"
        />
    <Button
        android:id="@+id/forecastFive"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@+id/forecastThree"
        android:layout_marginTop="50px"
        android:background="@drawable/ldpiforecast5"
        android:onClick="MainActivity"
        />
    <Button
        android:id="@+id/forecastSix"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@+id/forecastThree"
        android:layout_toRightOf="@id/forecastFive"
        android:layout_marginTop="50px"
        android:background="@drawable/ldpiforecast6"
        android:onClick="MainActivity"
        />
    <Button
        android:id="@+id/NothingDank"
        android:layout_width="660px"
        android:layout_height="400px"
        android:layout_below="@+id/forecastFive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:text="Nothing Dank"
        android:textSize="10pt"
        android:background="@color/colorBackground"
        android:onClick="MainActivity"
        />

</RelativeLayout>
